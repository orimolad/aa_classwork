<form action="<%=users_url %> " method="post">   

  <label for="user_name">Name</label>
  <input
    type="text"
    name="user[user_name]"
    id="user_name"
    value="<%= @user.user_name %>">

  <label>Password</label>
  <input
    type="password"
    name="user[password]"
    value="">
  <br>

  

  <% submit_text = 'Create' %>
  <input type="submit" value="<%= submit_text %>">
</form>